# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/address_book"

# =============================================================================
# INVOICE DATABASE CONFIGURATION (External Database)
# =============================================================================
# Option 1: Direct connection string (recommended)
INVOICE_DATABASE_URL="sqlserver://localhost:1433;database=invoice;integratedSecurity=true;trustServerCertificate=true"

# Option 2: Individual parameters (alternative)
INVOICE_DB_SERVER=localhost
INVOICE_DB_PORT=1433
INVOICE_DB_NAME=invoice
INVOICE_DB_USE_WINDOWS_AUTH=true
INVOICE_DB_USER=sa
INVOICE_DB_PASSWORD=

# =============================================================================
# DATABASE CONNECTION SETTINGS
# =============================================================================
# Connection pool settings
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Retry settings
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEFAULT_COUNTRY_CODE=IN
TRUSTED_SOURCES=ZOHO,INVOICE

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=change_me_to_a_secure_random_string
